<h1>Customer Name: <%= @customer.name %></h1>
<section id="customer_items">
<h2>Items</h2>
<% @customer.items.each do |item| %>
  <section id= "item-<%= item.id %>">
  <p><%= "Item: #{item.name}" %></p>
  <p><%= "Price: $#{item.price}" %></p>
  <p><%= "Supermarket Name: #{item.supermarket.name}" %></p>
  </section> 
<% end %>
</section>

<%= form_with url: "/customers/#{@customer.id}/items", method: :post, data: { turbo: false } do |form| %>
  <%= form.label :"Add Item by ID Number" %>
  <%= form.text_field :item_id %>
  <%= form.submit :Submit %>
<% end %>